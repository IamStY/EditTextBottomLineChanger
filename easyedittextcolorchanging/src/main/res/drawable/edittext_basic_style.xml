<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <item  android:state_pressed="true">
        <layer-list>

            <item android:height="1dp"
                  android:gravity="bottom"
                  android:left="3dp"
                  android:right="3dp"
                  android:id="@+id/item_one"
                  android:bottom="5dp">
                <shape >

                    <solid android:color="@color/ed_highlight"/>

                </shape>

            </item><!-- pressed -->


        </layer-list>
    </item>


    <item  android:state_focused="true" >
        <layer-list>

            <item android:height="1dp"
                  android:gravity="bottom"
                  android:left="3dp"
                  android:id="@+id/item_two"
                  android:right="3dp"
                  android:bottom="5dp">
                <shape >

                    <solid android:color="@color/ed_highlight"/>

                </shape>

            </item><!-- pressed -->
        </layer-list>
    </item>
    <item >
        <layer-list>

            <item android:height="1dp"
                  android:gravity="bottom"
                  android:left="3dp"
                  android:id="@+id/item_three"
                  android:right="3dp"
                  android:bottom="5dp">
                <shape >

                    <solid android:color="@color/ed_default"/>

                </shape>

            </item><!-- pressed -->
        </layer-list>
    </item>

</selector>